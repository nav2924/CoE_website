---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<Layout title="Partnerships & Services | Centre of Excellence in e-Mobility">
  <main class="pt-16 pb-20 lg:pt-20 lg:pb-32">
    <Container>
      <h1
        class="text-4xl lg:text-5xl font-bold text-center mb-8 text-gray-800 dark:text-white"
        style={{ marginTop: "50px" }}
      >
        Partnerships & Services
      </h1>

      <section class="mb-16">
        <h2
          class="text-3xl font-bold mb-8 text-center text-gray-800 dark:text-white"
        >
          Partnerships
        </h2>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <ul
            class="list-disc list-inside text-gray-600 dark:text-gray-300 text-2xl"
          >
            <li>Decibels lab Pvt. Ltd</li>
            <li>Mahindra Electric</li>
            <li>Safran Engineering</li>
          </ul>
        </div>
      </section>

      <section class="mb-16">
        <h2
          class="text-3xl font-bold mb-8 text-center text-gray-800 dark:text-white"
        >
          Internships and Placements
        </h2>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Our Centre offers a wide range of internship opportunities and
            placement support for students. We collaborate with various industry
            partners to provide hands-on experience and ensure successful career
            placements.
          </p>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
            <li>
              Internship Opportunity 1: Details about the internship and
              application process.
            </li>
            <li>
              Internship Opportunity 2: Details about the internship and
              application process.
            </li>
            <li>
              Internship Opportunity 3: Details about the internship and
              application process.
            </li>
            <li>
              Placement Support: Information on how we assist students with
              placements and career development.
            </li>
          </ul>
        </div>
      </section>

      <section class="mb-16">
        <h2
          class="text-3xl font-bold mb-8 text-center text-gray-800 dark:text-white"
        >
          Consultancy Services
        </h2>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            We offer a range of consultancy services to our industry partners.
            Our expertise in e-mobility and sustainable transportation solutions
            can help businesses innovate and grow.
          </p>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300">
            <li>Consultancy Service 1: Description of the service offered.</li>
            <li>Consultancy Service 2: Description of the service offered.</li>
            <li>Consultancy Service 3: Description of the service offered.</li>
            <li>Consultancy Service 4: Description of the service offered.</li>
            <li>Consultancy Service 5: Description of the service offered.</li>
          </ul>
        </div>
      </section>
    </Container>
  </main>
</Layout>

<style>
  @media (max-width: 640px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
