---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<Layout title="About Us | Centre of Excellence in e-Mobility">
  <main class="pt-16 pb-20 lg:pt-20 lg:pb-32">
    <Container>
      <h1
        class="text-4xl lg:text-5xl font-bold text-center mb-8 text-gray-800 dark:text-white"
        style={{ marginTop: "50px" }}
      >
        About Our Centre
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">
            Our Mission
          </h2>
          <p class="text-gray-600 dark:text-gray-300">
            The Centre of Excellence in e-Mobility at CHRIST (Deemed to be
            University) is dedicated to advancing the future of sustainable
            transportation through cutting-edge research, industry
            collaboration, and innovative education programs.
          </p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-white">
            Our Vision
          </h2>
          <p class="text-gray-600 dark:text-gray-300">
            We aspire to be a global leader in e-mobility research and
            education, fostering a new generation of innovators and sustainable
            solutions that will shape the future of transportation.
          </p>
        </div>
      </div>

      <section class="mb-16">
        <h2
          class="text-3xl font-bold mb-8 text-center text-gray-800 dark:text-white"
        >
          Leadership Team
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            [
              {
                name: "Dr. Parag Jose C",
                role: "Head- Centre of Excellence in e-Mobility",
                img: "/Parag Jose .JPG",
              },
              {
                name: "Dr. Pragash K",
                role: "Department of Electronics & Communication Engg., SoET",
                img: "/prakash.jpg",
              },
              {
                name: "Dr. Harish Kumar",
                role: "Department of Mechanical Engg., SoET",
                img: "/sudharshan.jpg",
              },
              {
                name: "Dr. Venkataswamy R",
                role: "Department of Electrical & Electronics Engg., SoET",
                img: "/Venkataswamy R.png",
              },
              {
                name: "Prof. Haneesh K.M",
                role: "Department of Electrical & Electronics Engg., SoET",
                img: "/Haneesh KM.png",
              },
              {
                name: "Dr Thejaraju R",
                role: "Department of Mechanical and Automobile Engg",
                img: "/thejarraju.png",
              },
              {
                name: "Dr. Ravikumar R",
                role: "Department of Mechanical & Automobile Engineering",
                img: "/Ravikumar R_2217.jpg",
              },
            ].map((member, index) => (
              <div
                key={index}
                class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg text-center"
              >
                <div class="w-24 h-24 mx-auto mb-4 bg-gray-300 dark:bg-gray-600 rounded-full">
                  <img
                    src={member.img}
                    alt={`${member.name}'s photo`}
                    class="w-full h-full rounded-full"
                  />
                </div>
                <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-white">
                  {member.name}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                  {member.role}
                </p>
              </div>
            ))
          }
        </div>
      </section>

      <section>
        <!-- <h2
          class="text-3xl font-bold mb-8 text-center text-gray-800 dark:text-white"
        >
          Advisory Board
        </h2> -->
        <!-- <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
